<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" tools:ignore="MissingConstraints">

        <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" tools:ignore="MissingConstraints">
            <TextView
                    android:id="@+id/serverIpLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="IP Servidor"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"/>

            <EditText
                    android:id="@+id/serverIpInput"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal" tools:ignore="MissingConstraints">
            <TextView
                    android:id="@+id/serverUserLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Usuario"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"/>

            <EditText
                    android:id="@+id/serverUserInput"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    tools:ignore="MissingConstraints"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" tools:ignore="MissingConstraints">
            <TextView
                    android:id="@+id/serverPwdLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Senha"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"/>

            <EditText
                    android:id="@+id/serverPwdInput"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:inputType="textPassword"

                    tools:ignore="MissingConstraints"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" tools:ignore="MissingConstraints">
            <TextView
                    android:id="@+id/serverMsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="MS"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"/>

            <EditText
                android:id="@+id/serverMsInput"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints"/>
            </LinearLayout>
        
            <Button
                    android:id="@+id/save"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"

                    android:textSize="20dp"
                    android:text="Salvar" />

            <Button
                    android:id="@+id/startstop"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"

                    android:textSize="20dp"
                    android:text="Parar" />
            <Button
                    android:id="@+id/clearlog"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"

                    android:textSize="20dp"
                    android:text="Limpar log" />

        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="65dp" android:id="@+id/listLog" tools:ignore="MissingConstraints"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>